{
  "pluginAlias": "netatmo-security",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Netatmo Security Platform"
      },
      "client_id": {
        "title": "Client ID",
        "type": "string",
        "required": true,
        "default": ""
      },
      "client_secret": {
        "title": "Client Secret",
        "type": "string",
        "required": true,
        "default": "",
        "condition": {
          "functionBody": "return model.hide_client_secret === false || model.hide_client_secret.length <= 0;"
        }
      },
      "hide_client_secret": {
        "title": "Hide Client Secret?",
        "type": "boolean",
        "default": false,
        "condition": {
          "functionBody": "return model.client_secret != null && model.client_secret.length > 0;"
        }
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": true,
        "default": ""
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "default": "",
        "condition": {
          "functionBody": "return model.hide_password === false || model.password.length <= 0;"
        }
      },
      "hide_password": {
        "title": "Hide Password?",
        "type": "boolean",
        "default": false,
        "condition": {
          "functionBody": "return model.password != null && model.password.length > 0;"
        }
      }
    }
  }
}
